<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="wishlist_sidebar" remove="false"/>
        <referenceBlock name="catalog.product.viewed" remove="true"/>

        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="dynamic" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Amasty_Blog/js/amblog/comments" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_Blog/js/amblog/comments</item>
                                <item name="import" xsi:type="array">
                                    <item name="mixin" xsi:type="string">Swissup_BreezeAmastyBlog/js/comments-mixin</item>
                                </item>
                            </item>
                            <item name="amBlogAccord" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_Blog/js/amBlogAccord</item>
                            </item>
                            <item name="amBlogDates" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_Blog/js/components/amblog-humanize-dates</item>
                            </item>
                            <item name="amBlogSearch" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_Blog/js/blog-live-search</item>
                            </item>
                            <item name="amBlogSlider" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_BreezeAmastyBlog/js/blog-slider</item>
                            </item>
                            <item name="amBlogViewsList" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_Blog/js/posts-lists-counter-update</item>
                            </item>
                            <item name="amBlogViewStatistic" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_Blog/js/amBlogViewStatistic</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
